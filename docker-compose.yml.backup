services:
  postgres:
    image: postgres:16-alpine
    container_name: lify_postgres
    environment:
      POSTGRES_USER: lify
      POSTGRES_PASSWORD: lify
      POSTGRES_DB: lify_dev
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data

  redis:
    image: redis:7-alpine
    container_name: lify_redis
    ports:
      - "6379:6379"

  minio:
    image: minio/minio:latest
    container_name: lify_minio
    environment:
      MINIO_ROOT_USER: lify
      MINIO_ROOT_PASSWORD: lifypassword
    command: server /data --console-address ":9001"
    ports:
      - "9000:9000"
      - "9001:9001"
    volumes:
      - minio:/data

  mailhog:
    image: mailhog/mailhog:latest
    container_name: lify_mailhog
    ports:
      - "1025:1025"  # SMTP
      - "8025:8025"  # Web UI

volumes:
  pgdata:
  minio:
